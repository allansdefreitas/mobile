<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5e9b9"
    tools:context="br.edu.ifpe.tads.pdm.somdosbichos.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/dogImageId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="49dp"
        android:layout_marginTop="28dp"
        app:srcCompat="@drawable/cao" />

    <ImageView
        android:id="@+id/catImageId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/dogImageId"
        android:layout_marginEnd="35dp"
        app:srcCompat="@drawable/gato" />

    <ImageView
        android:id="@+id/lionImageId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dogImageId"
        android:layout_below="@+id/dogImageId"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/leao" />

    <ImageView
        android:id="@+id/monkeyImageId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/catImageId"
        android:layout_alignTop="@+id/lionImageId"
        app:srcCompat="@drawable/macaco" />

    <ImageView
        android:id="@+id/sheepImageId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lionImageId"
        android:layout_below="@+id/monkeyImageId"
        app:srcCompat="@drawable/ovelha" />

    <ImageView
        android:id="@+id/cowImageId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sheepImageId"
        android:layout_alignEnd="@+id/monkeyImageId"
        app:srcCompat="@drawable/vaca" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        app:srcCompat="@drawable/direitos" />
</RelativeLayout>
