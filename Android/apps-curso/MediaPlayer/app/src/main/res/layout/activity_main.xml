<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a7d3e3"
    tools:context="br.edu.ifpe.tads.pdm.mediaplayer.MainActivity">

    <Button
        android:id="@+id/botaoPlayId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/botaoStopId"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:text="Play" />

    <Button
        android:id="@+id/botaoStopId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/botaoPlayId"
        android:layout_centerVertical="true"
        android:text="Stop" />
</RelativeLayout>
